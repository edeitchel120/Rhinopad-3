/ {
    chosen {
        zmk,display = &rhinopad_oled;
        zephyr,display = &rhinopad_oled;
    };
};

/*
 * Fix for Zephyr 3.5 I2C binding:
 * - The failing node is /soc/i2c@40004000, which is I2C0/TWI0.
 * - We add pinctrl groups for I2C0 and hook them to that node.
 *
 * NOTE: Adjust pins (0,24 / 0,25) if your PCB uses different ones.
 */
&pinctrl {
    i2c0_default: i2c0_default {
        group1 {
            /* Example wiring: SDA = P0.24, SCL = P0.25 */
            psels = <NRF_PSEL(TWIM_SDA, 0, 24)>,
                    <NRF_PSEL(TWIM_SCL, 0, 25)>;
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 24)>,
                    <NRF_PSEL(TWIM_SCL, 0, 25)>;
            low-power-enable;
        };
    };
};

/* Attach SSD1306 128x32 OLED at 0x3C to I2C0 (0x40004000) */
&i2c0 {
    status = "okay";

    /* REQUIRED by nordic,nrf-twi binding in Zephyr 3.5 */
    pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";

    clock-frequency = <I2C_BITRATE_STANDARD>;

    rhinopad_oled: oled@3c {
        compatible = "solomon,ssd1306fb";
        reg = <0x3c>;
        label = "Rhinopad_OLED";

        width = <128>;
        height = <32>;

        /* Basic geometry/orientation */
        page-offset = <0>;
        segment-offset = <0>;
        display-offset = <0>;

        segment-remap;
        com-seq;
        com-invdir;

        multiplex-ratio = <31>;
        precharge-period = <2 2>;

        /* Uncomment and adjust if your OLED uses a reset pin:
         * reset-gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
         */
    };
};
