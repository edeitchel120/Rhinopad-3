	/ {
    chosen {
        zmk,display = &rhinopad_oled;
        zephyr,display = &rhinopad_oled;
    };
};

/* I2C1 controller + SSD1306 128x32 OLED at 0x3C
 * NOTE: Adjust sda-pin / scl-pin if your PCB uses different pins.
 */
&i2c1 {
    status = "okay";

    /* Use the older nrf-twi binding so we do NOT need pinctrl-0 */
    compatible = "nordic,nrf-twi";

    /* Example wiring: SDA = P0.24, SCL = P0.25 */
    sda-pin = <24>;
    scl-pin = <25>;

    /* 100 kHz I2C */
    clock-frequency = <100000>;

    rhinopad_oled: oled@3c {
        compatible = "solomon,ssd1306fb";
        reg = <0x3c>;
        label = "Rhinopad_OLED";

        width = <128>;
        height = <32>;

        /* Basic geometry/orientation */
        page-offset = <0>;
        segment-offset = <0>;
        display-offset = <0>;

        segment-remap;
        com-seq;
        com-invdir;

        multiplex-ratio = <31>;
        precharge-period = <2 2>;

        /* Uncomment and adjust if your OLED uses a reset pin:
         * reset-gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
         */
    };
};
